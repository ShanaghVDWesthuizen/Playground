@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Fun Edition 🎉</title>
</head>
<body>
    <div class="header">
        <h1>Welcome to King Price's User Management Playground 🚀</h1>
        <div class="container">
            <img src="~/images/KingPriceLogo.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
    </div>
    <div class="user-section">
        <div id="userForm">
            <h3>Add a new User 📝</h3>
            <input type="text" id="userName" placeholder="Enter User Name">
            <button id="addUser">Add User</button>
            <p id="addSuccessMessage"></p>
        </div>
        <div id="userList">
            <h3>User List</h3>
            <table class="user-table">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>
                            <button onclick="deleteUser()">Delete 🗑️</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <p id="listOfUsersMessage"></p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
