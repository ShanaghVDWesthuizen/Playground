@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Fun Edition 🎉</title>
</head>
<body>
    <div class="header">
        <h1>Welcome to King Price's User Management Playground 🚀</h1>
        <div class="container">
            <img src="~/images/KingPriceLogo.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
    </div>
    <div id="userForm">
        <h3>ADD A USER 📝</h3>
        <input type="text" id="userName" placeholder="Enter User Name">
        <button id="addUser">Add User</button>
        <p id="addSuccessMessage"></p>
    </div>
    <div id="userList">
        <h3>ALL USERS</h3>
        <table class="user-table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <p id="listOfUsersMessage"></p>
    </div>
    <!-- Bootstrap modal for editing users -->
    <div id="editUserModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="text" id="editUsernameInput" placeholder="New Username">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="saveEditUserBtn">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
