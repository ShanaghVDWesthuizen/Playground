@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Fun Edition 🎉</title>
</head>
<body>
    <div class="header">
        <h1>Welcome to King Price's User Management Playground 🚀</h1>
        <div class="container">
            <img src="~/images/KingPriceLogo.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
    </div>
    <div class="user-section">
        <div id="userList">
            <h3>User List</h3>
        <table class="user-table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
            <p id="listOfUsersMessage"></p>
        </div>
        <div id="userForm">
            <h3>Add a new User 📝</h3>
            <input type="text" id="userName" placeholder="Enter User Name">
            <button id="addUser">Add User</button>
            <p id="addSuccessMessage"></p>
        </div>
        <div id="userDelete">
            <h3>Delete an existing User 🗑️</h3>
            <input type="number" id="deleteUserId" placeholder="Enter User ID to Vanish">
            <button id="deleteUser">Banish User</button>
            <p id="deleteSuccessMessage"></p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
